<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<HBox xmlns:fx="http://javafx.com/fxml" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" spacing="3"
      onMouseEntered="#onMouseEntered" onMouseExited="#onMouseExited"
      fx:controller="com.greymax.vkplayer.player.playlistbox.PlaylistBoxPresenter" >
  <padding><Insets top="0" right="0" bottom="0" left="10" /></padding>
  <Label styleClass="playlist-icon" />
  <HBox HBox.hgrow="ALWAYS" alignment="CENTER_LEFT">
    <Text fx:id="playlistName" styleClass="playlist-name" text="Playlist"/>
  </HBox>
  <Button fx:id="refreshButton" styleClass="playlist-refresh-button" focusTraversable="false" onAction="#refreshPlaylist" />
  <Button fx:id="removeButton" styleClass="playlist-remove-button" focusTraversable="false" onAction="#removePlaylist" />
</HBox>
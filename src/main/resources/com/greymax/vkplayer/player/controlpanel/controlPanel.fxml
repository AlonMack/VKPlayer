<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<HBox xmlns:fx="http://javafx.com/fxml" styleClass="control-panel" HBox.hgrow="ALWAYS"
      fx:controller="com.greymax.vkplayer.player.controlpanel.ControlPanelPresenter">

  <!--Play, pause, prev, next-->
  <VBox alignment="BOTTOM_LEFT" styleClass="control-panel-left">
    <HBox alignment="CENTER" spacing="10.0">
      <Button fx:id="prevButton" styleClass="round-button-prev" onAction="#prev" />
      <Button fx:id="playButton" styleClass="round-button-play" onAction="#play" />
      <Button fx:id="nextButton" styleClass="round-button-next" onAction="#next" />
    </HBox>
  </VBox>

  <!--Seek, song title-->
  <VBox alignment="BOTTOM_CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
    <padding>
      <Insets bottom="10"/>
    </padding>
    <HBox alignment="CENTER" VBox.vgrow="NEVER">
      <Label fx:id="songTitle" styleClass="song-title" HBox.hgrow="ALWAYS" />
    </HBox>
    <HBox spacing="3">
      <padding>
        <Insets right="5"/>
      </padding>
      <Slider fx:id="seekSlider" styleClass="progress-slider" HBox.hgrow="ALWAYS" />
      <Label fx:id="progressTimeLabel" styleClass="progress-time" />
    </HBox>
  </VBox>


  <!--Volume, repeat-->
  <VBox alignment="BOTTOM_CENTER" spacing="7" styleClass="control-panel-right">
    <padding>
      <Insets bottom="10" left="5" right="5"/>
    </padding>
    <HBox spacing="5">
      <Button fx:id="repeatButton" styleClass="round-button-repeat" onAction="#repeat" />
      <ToggleButton fx:id="randomButton" styleClass="round-button-random" onAction="#random" />
    </HBox>
    <HBox spacing="5">
      <children>
        <Button styleClass="volume-min-icon" onAction="#mute" />
        <HBox>
          <HBox.margin><Insets top="3"/></HBox.margin>
          <children>
            <Slider fx:id="volumeSlider" styleClass="volume-slider" />
          </children>
        </HBox>
        <Button styleClass="volume-max-icon" onAction="#maxVolume" />
      </children>
    </HBox>
  </VBox>

  <!--Separator-->
  <Separator styleClass="settings-separator" halignment="CENTER" orientation="VERTICAL" />

  <!--Settings-->
  <VBox alignment="BOTTOM_CENTER" styleClass="control-panel-settings">
    <padding>
      <Insets right="3" bottom="10"/>
    </padding>
    <Button fx:id="settingsButton" styleClass="round-button-settings" />
  </VBox>
</HBox>

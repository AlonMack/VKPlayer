<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.CheckBox?>

<GridPane fx:controller="com.greymax.vkplayer.controllers.auth.AuthController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Label text="Login" styleClass="fieldLabel"
           GridPane.rowIndex="1" GridPane.columnIndex="1" />
    <TextField fx:id="loginField" styleClass="field"
           GridPane.rowIndex="1" GridPane.columnIndex="2" />
    <Label text="Password" styleClass="fieldLabel"
           GridPane.rowIndex="2" GridPane.columnIndex="1" />
    <PasswordField fx:id="passwordField" styleClass="field"
           GridPane.rowIndex="2" GridPane.columnIndex="2" />
    <CheckBox text="Remember me" GridPane.rowIndex="3" GridPane.columnIndex="2" GridPane.columnSpan="2" />

    <HBox GridPane.rowIndex="4" GridPane.columnIndex="1" spacing="10" alignment="CENTER_RIGHT" GridPane.columnSpan="2">
        <Button fx:id="loginButton" text="Sign In" styleClass="button"
                onAction="#login" />
    </HBox>

</GridPane>